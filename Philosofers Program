#include <stdio.h>
#include <pthread.h>
#include <semaphore.h>
#include <unistd.h>

#define N 5   // Number of philosophers

sem_t chopstick[N];  // Chopstick semaphores
sem_t room;          // Limits number of philosophers

void* dine(void* num) {
    int id = *(int*)num;

    sem_wait(&room);  // Enter room (max N-1)
    sem_wait(&chopstick[id]);           // Pick left chopstick
    sem_wait(&chopstick[(id + 1) % N]); // Pick right chopstick

    printf("Philosopher %d is eating\n", id);
    sleep(1);

    sem_post(&chopstick[id]);           // Put down left
    sem_post(&chopstick[(id + 1) % N]); // Put down right
    sem_post(&room);                    // Leave room

    printf("Philosopher %d is thinking\n", id);
    return NULL;
}

int main() {
    pthread_t philosopher[N];
    int ids[N];

    sem_init(&room, 0, N - 1);  // Allow only N-1 philosophers at once
    for (int i = 0; i < N; i++)
        sem_init(&chopstick[i], 0, 1);

    for (int i = 0; i < N; i++) {
        ids[i] = i;
        pthread_create(&philosopher[i], NULL, dine, &ids[i]);
    }

    for (int i = 0; i < N; i++)
        pthread_join(philosopher[i], NULL);

    printf("Dining completed!\n");
    return 0;
}
