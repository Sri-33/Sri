#include <stdio.h>
#include <string.h>

int main() {
    char dirname[20], files[10][20];
    int n = 0, ch, i;
    char fname[20];

    printf("Enter directory name: ");
    scanf("%s", dirname);

    do {
        printf("\n1. Create File\n2. Delete File\n3. Display Files\n4. Exit\nEnter choice: ");
        scanf("%d", &ch);

        switch(ch) {
            case 1:
                printf("Enter file name: ");
                scanf("%s", fname);
                strcpy(files[n++], fname);
                printf("File created.\n");
                break;

            case 2:
                printf("Enter file name to delete: ");
                scanf("%s", fname);
                for(i = 0; i < n; i++) {
                    if(strcmp(fname, files[i]) == 0) {
                        strcpy(files[i], files[n - 1]);
                        n--;
                        printf("File deleted.\n");
                        break;
                    }
                }
                if(i == n) printf("File not found.\n");
                break;

            case 3:
                printf("\nFiles in %s:\n", dirname);
                for(i = 0; i < n; i++) printf("%s\n", files[i]);
                if(n == 0) printf("No files.\n");
                break;
        }
    } while(ch != 4);

    return 0;
}
