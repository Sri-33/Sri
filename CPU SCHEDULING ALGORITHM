fcfs
#include <stdio.h>

int main() {
    int n, bt[10], wt[10], tat[10], i;
    float avgwt = 0, avgtat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &bt[i]);

    wt[0] = 0;
    for(i = 1; i < n; i++)
        wt[i] = wt[i - 1] + bt[i - 1];

    for(i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
        avgwt += wt[i];
        avgtat += tat[i];
    }

    printf("\nP\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++)
        printf("P%d\t%d\t%d\t%d\n", i + 1, bt[i], wt[i], tat[i]);

    printf("\nAvg WT = %.2f\nAvg TAT = %.2f\n", avgwt / n, avgtat / n);
    return 0;
}


sjf

#include <stdio.h>

int main() {
    int n, bt[10], wt[10], tat[10], i, j, temp;
    float avgwt = 0, avgtat = 0;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time:\n");
    for(i = 0; i < n; i++)
        scanf("%d", &bt[i]);

    for(i = 0; i < n - 1; i++)
        for(j = i + 1; j < n; j++)
            if(bt[i] > bt[j]) {
                temp = bt[i]; bt[i] = bt[j]; bt[j] = temp;
            }

    wt[0] = 0;
    for(i = 1; i < n; i++)
        wt[i] = wt[i - 1] + bt[i - 1];

    for(i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
        avgwt += wt[i]; avgtat += tat[i];
    }

    printf("\nBT\tWT\tTAT\n");
    for(i = 0; i < n; i++)
        printf("%d\t%d\t%d\n", bt[i], wt[i], tat[i]);

    printf("\nAvg WT = %.2f\nAvg TAT = %.2f\n", avgwt / n, avgtat / n);
    return 0;
}


srtf

#include <stdio.h>

int main() {
    int n, i, t = 0, min, pos = 0, bt[10], rt[10], wt[10], tat[10], complete = 0;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &bt[i]);
        rt[i] = bt[i];
    }

    while(complete != n) {
        min = 999;
        for(i = 0; i < n; i++)
            if(rt[i] > 0 && rt[i] < min) {
                min = rt[i];
                pos = i;
            }

        rt[pos]--;
        t++;

        if(rt[pos] == 0) {
            complete++;
            tat[pos] = t;
            wt[pos] = tat[pos] - bt[pos];
        }
    }

    printf("\nBT\tWT\tTAT\n");
    for(i = 0; i < n; i++)
        printf("%d\t%d\t%d\n", bt[i], wt[i], tat[i]);

    return 0;
}


priority scheduling
#include <stdio.h>

int main() {
    int n, bt[10], p[10], wt[10], tat[10], i, j, temp;

    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time and Priority:\n");
    for(i = 0; i < n; i++)
        scanf("%d %d", &bt[i], &p[i]);

    for(i = 0; i < n - 1; i++)
        for(j = i + 1; j < n; j++)
            if(p[i] > p[j]) {
                temp = p[i]; p[i] = p[j]; p[j] = temp;
                temp = bt[i]; bt[i] = bt[j]; bt[j] = temp;
            }

    wt[0] = 0;
    for(i = 1; i < n; i++)
        wt[i] = wt[i - 1] + bt[i - 1];

    printf("\nP\tBT\tWT\tTAT\n");
    for(i = 0; i < n; i++) {
        tat[i] = wt[i] + bt[i];
        printf("P%d\t%d\t%d\t%d\n", i + 1, bt[i], wt[i], tat[i]);
    }

    return 0;
}


round robin 

#include <stdio.h>

int main() {
    int n, quantum, bt[10], rem[10], wt[10], tat[10], t = 0, i;
    
    printf("Enter number of processes: ");
    scanf("%d", &n);

    printf("Enter Burst Time:\n");
    for(i = 0; i < n; i++) {
        scanf("%d", &bt[i]);
        rem[i] = bt[i];
    }

    printf("Enter Time Quantum: ");
    scanf("%d", &quantum);

    while(1) {
        int done = 1;
        for(i = 0; i < n; i++) {
            if(rem[i] > 0) {
                done = 0;
                if(rem[i] > quantum) {
                    t += quantum;
                    rem[i] -= quantum;
                } else {
                    t += rem[i];
                    wt[i] = t - bt[i];
                    rem[i] = 0;
                }
            }
        }
        if(done) break;
    }

    printf("\nP\tBT\tWT\n");
    for(i = 0; i < n; i++) {
        tat[i] = bt[i] + wt[i];
        printf("P%d\t%d\t%d\n", i + 1, bt[i], wt[i]);
    }
    return 0;
}
