#include <stdio.h>

int main() {
    int frames[10], pages[30], use[10];
    int no_of_frames, no_of_pages, i, j, k, pos, faults = 0, time = 0, flag;

    printf("Enter number of frames: ");
    scanf("%d", &no_of_frames);

    printf("Enter number of pages: ");
    scanf("%d", &no_of_pages);

    printf("Enter page reference string:\n");
    for(i = 0; i < no_of_pages; i++) {
        scanf("%d", &pages[i]);
    }

    for(i = 0; i < no_of_frames; i++) {
        frames[i] = -1;
        use[i] = 0;
    }

    printf("\nPage\tFrames\n");
    for(i = 0; i < no_of_pages; i++) {
        printf("%d\t", pages[i]);
        flag = 0;

        for(j = 0; j < no_of_frames; j++) {
            if(frames[j] == pages[i]) {
                flag = 1;
                use[j] = ++time;
                break;
            }
        }

        if(flag == 0) {
            for(j = 0; j < no_of_frames; j++) {
                if(frames[j] == -1) {
                    frames[j] = pages[i];
                    use[j] = ++time;
                    faults++;
                    flag = 1;
                    break;
                }
            }
        }

        if(flag == 0) {
            int least = use[0];
            pos = 0;
            for(j = 1; j < no_of_frames; j++) {
                if(use[j] < least) {
                    least = use[j];
                    pos = j;
                }
            }
            frames[pos] = pages[i];
            use[pos] = ++time;
            faults++;
        }

        for(k = 0; k < no_of_frames; k++) {
            if(frames[k] == -1)
                printf("- ");
            else
                printf("%d ", frames[k]);
        }
        printf("\n");
    }

    printf("\nTotal Page Faults = %d\n", faults);
    return 0;
}
