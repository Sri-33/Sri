#include <stdio.h>
#include <stdlib.h>

int main() {
    int n, head, i, total = 0;
    int req[100];

    printf("Enter number of requests: ");
    scanf("%d", &n);

    printf("Enter request sequence: ");
    for(i = 0; i < n; i++)
        scanf("%d", &req[i]);

    printf("Enter initial head position: ");
    scanf("%d", &head);

    for(i = 0; i < n; i++) {
        total += abs(req[i] - head);  // calculate movement
        head = req[i];                // move head to current request
    }

    printf("Total head movement = %d\n", total);
    return 0;
}
